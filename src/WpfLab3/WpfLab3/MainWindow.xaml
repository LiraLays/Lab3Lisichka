<Window x:Class="WpfLab3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLab3"
        mc:Ignorable="d"
        Title="Лабораторная работа №3"
        Height="670"
        Width="352"
        ResizeMode="NoResize">

    <Grid Background="#FF10121C"
          Margin="0,0,0,-6">
        <Button x:Name="ButtonGenerateArray"
                Content="Сгенерировать массив"
                HorizontalAlignment="Left"
                Height="31"
                Margin="10,50,0,0"
                VerticalAlignment="Top"
                Width="316"
                Click="ButtonGenerateArray_Click"
                Background="#FF1D2032"
                BorderBrush="White"
                Foreground="White"
                FontFamily="Courier New"
                FontSize="18"
                FontWeight="Bold" />

        <TextBox x:Name="TextBoxArrayElems"
                 HorizontalAlignment="Left"
                 Height="45"
                 Margin="10,115,0,0"
                 TextWrapping="Wrap"
                 Style="{StaticResource PlaceholderTextBoxStyle}"
                 Tag="Диапазон значений в массиве"
                 VerticalAlignment="Top"
                 Width="316"
                 Background="#FF1D2032"
                 BorderBrush="White"
                 Foreground="White"
                 FontFamily="Courier New"
                 FontSize="18" />
        <Slider x:Name="SliderSizeArray"
                HorizontalAlignment="Left"
                Height="18"
                Margin="10,92,0,0"
                VerticalAlignment="Top"
                Width="276"
                SmallChange="1"
                Maximum="100"
                Minimum="1"
                Value="1"
                Foreground="White" />
        <Label x:Name="LabelSizeArray"
               Content="0"
               HorizontalAlignment="Left"
               Height="34"
               Margin="281,81,0,0"
               VerticalAlignment="Top"
               Width="45"
               Foreground="White"
               FontSize="18"
               FontFamily="Courier New"
               BorderBrush="White" />
        <Button x:Name="ButtonMakeStep"
                Content="Шаг"
                HorizontalAlignment="Left"
                Height="28"
                Margin="10,271,0,0"
                VerticalAlignment="Top"
                Width="153"
                Click="ButtonMakeStep_Click"
                Background="#FF1D2032"
                BorderBrush="White"
                Foreground="White"
                FontFamily="Courier New"
                FontSize="18"
                FontWeight="Bold" />
        <Button x:Name="ButtonStart"
                Content="Пуск"
                HorizontalAlignment="Left"
                Height="28"
                Margin="168,271,0,0"
                VerticalAlignment="Top"
                Width="158"
                Click="ButtonStart_Click"
                Background="#FF1D2032"
                BorderBrush="White"
                Foreground="White"
                FontFamily="Courier New"
                FontSize="18"
                FontWeight="Bold" />
        <TextBox x:Name="TextBoxArrayChanges"
                 HorizontalAlignment="Left"
                 Height="83"
                 Margin="10,337,0,0"
                 TextWrapping="Wrap"
                 Text=""
                 VerticalAlignment="Top"
                 IsReadOnly="True"
                 Width="316"
                 Background="#FF1D2032"
                 BorderBrush="White"
                 Foreground="White"
                 FontFamily="Courier New"
                 FontSize="18" />
        <StackPanel HorizontalAlignment="Left"
                    Height="48"
                    Margin="10,165,0,0"
                    VerticalAlignment="Top"
                    Width="316">
            <RadioButton Content="Сумма элементов"
                         Height="15"
                         Width="269"
                         HorizontalAlignment="Left"
                         Checked="RadioButtonSum_Checked"
                         FontFamily="Courier New"
                         FontSize="18"
                         Foreground="#FFFFFEFE" />
            <RadioButton Content="Количество значений > T"
                         Height="15"
                         Width="268"
                         HorizontalAlignment="Left"
                         Checked="RadioButtonCount_Checked"
                         FontFamily="Courier New"
                         FontSize="18"
                         Foreground="#FFFFFEFE" />
            <RadioButton Content="Максимальное значение"
                         Height="15"
                         Width="266"
                         HorizontalAlignment="Left"
                         Checked="RadioButtonMax_Checked"
                         FontFamily="Courier New"
                         FontSize="18"
                         Foreground="#FFFFFEFE" />
            <StackPanel x:Name="StackPanelTInfo"
                        Visibility="Visible">
                <Label Content=":"
                       Height="25"
                       Width="313" />
                <TextBox x:Name="TextBox123"
                         Height="21"
                         TextWrapping="Wrap"
                         Width="184" />
            </StackPanel>
        </StackPanel>
        <Grid>
            <Label x:Name="label"
                   Content="Данные"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,0"
                   VerticalAlignment="Top"
                   Width="92"
                   Height="35"
                   FontFamily="Courier New"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="White" />
            <Button x:Name="ButtonReference"
                    Height="35"
                    Width="35"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0, 5, 5, 0"
                    Background="#FF1D2032"
                    Foreground="White"
                    BorderBrush="White"
                    FontFamily="Courier New"
                    FontSize="24"
                    VerticalContentAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Content="?"
                    Click="ButtonReference_Click" />
        </Grid>
        <TextBox x:Name="TextBoxT"
                 HorizontalAlignment="Left"
                 Margin="10,239,0,0"
                 TextWrapping="Wrap"
                 Style="{StaticResource PlaceholderTextBoxStyle}"
                 Tag="Введите значение Т"
                 VerticalAlignment="Top"
                 Width="316"
                 Height="28"
                 Background="#FF1D2032"
                 Foreground="White"
                 BorderBrush="White"
                 FontFamily="Courier New"
                 FontSize="18"
                 Visibility="Hidden" />
        <Rectangle x:Name="LoopIndicator"
                   HorizontalAlignment="Left"
                   Height="28"
                   Margin="10,503,0,0"
                   Stroke="White"
                   VerticalAlignment="Top"
                   Width="28"
                   Fill="#FFA33D3D" />
        <Label x:Name="label1"
               Content="Завершение цикла"
               HorizontalAlignment="Left"
               Margin="43,503,0,0"
               VerticalAlignment="Top"
               Height="28"
               Foreground="White"
               FontFamily="Courier New"
               FontSize="18"
               FontWeight="Bold"
               Width="283" />
        <Rectangle x:Name="InvariantIndicator"
                   HorizontalAlignment="Left"
                   Height="28"
                   Margin="10,536,0,0"
                   Stroke="White"
                   VerticalAlignment="Top"
                   Width="28"
                   Fill="#FF3DA354" />
        <Label x:Name="label1_Copy"
               Content="Истинность инварианта"
               HorizontalAlignment="Left"
               Margin="43,536,0,0"
               VerticalAlignment="Top"
               Height="28"
               Foreground="White"
               FontFamily="Courier New"
               FontSize="18"
               FontWeight="Bold"
               Width="283" />
        <Button x:Name="ButtonShowFormal"
                Content="Показать формальные требования"
                HorizontalAlignment="Center"
                Height="28"
                Margin="0,586,0,0"
                VerticalAlignment="Top"
                Width="332"
                Click="ButtonShowFormal_Click"
                Background="#FF1D2032"
                BorderBrush="White"
                Foreground="White"
                FontFamily="Courier New"
                FontSize="18"
                FontWeight="Bold" />
        <ProgressBar x:Name="ProgressBar"
                     Value="0"
                     HorizontalAlignment="Left"
                     Height="14"
                     Margin="10,425,0,0"
                     VerticalAlignment="Top"
                     Width="316"
                     Background="#FF1D2032"
                     LargeChange="0"
                     Foreground="#FF3DA354"
                     BorderBrush="White" />
        <Border BorderBrush="White"
                BorderThickness="1"
                HorizontalAlignment="Left"
                Height="54"
                Margin="10,444,0,0"
                VerticalAlignment="Top"
                Width="316"
                Background="#FF1D2032">
            <TextBox x:Name="InvariantTextBox"
                     Style="{StaticResource PlaceholderTextBoxStyle}"
                     Tag="Здесь будут показаны инварианты"
                     TextWrapping="Wrap"
                     Foreground="White"
                     Background="#FF1D2032"
                     FontFamily="Courier New"
                     FontWeight="Bold"
                     FontSize="18"
                     IsReadOnly="True" />
        </Border>
        <Border BorderBrush="White"
                BorderThickness="1"
                HorizontalAlignment="Left"
                Height="28"
                Margin="10,304,0,0"
                VerticalAlignment="Top"
                Width="316"
                Background="#FF1D2032">
            <TextBox x:Name="FormulaTextBox"
                     Style="{StaticResource PlaceholderTextBoxStyle}"
                     Tag="Здесь будет показана формула"
                     TextWrapping="Wrap"
                     Foreground="White"
                     Background="#FF1D2032"
                     FontFamily="Courier New"
                     FontWeight="Bold"
                     FontSize="18"
                     IsReadOnly="True" />
        </Border>
    </Grid>
</Window>
