<Window x:Class="WpfLab3.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Справка"
        Height="780"
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Background="#FF10121C"
          ScrollViewer.VerticalScrollBarVisibility="Auto">

        <Grid.RowDefinitions>
            <RowDefinition Height="42"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Label x:Name="LabelTitle"
               Content="Как работать с приложением"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Width="332"
               Height="35"
               FontFamily="Courier New"
               FontSize="20"
               FontWeight="Bold"
               Foreground="White"
               Grid.Row="0" />

        <Grid Grid.Row="1"
              Margin="10,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Label x:Name="LabelText1"
                   Content="Пошаговый режим:"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,0"
                   VerticalAlignment="Top"
                   Width="197"
                   Height="35"
                   FontFamily="Courier New"
                   FontSize="17"
                   FontWeight="Bold"
                   Foreground="White"
                   Grid.Row="0" />
            <TextBlock x:Name="Text1TextBox"
                       FontFamily="Courier New"
                       FontSize="15"
                       FontWeight="Bold"
                       Foreground="White"
                       Grid.Row="1"
                       TextWrapping="Wrap"
                       Text="" />
        </Grid>

        <Grid Grid.Row="2"
              Margin="10,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="101*" />
                <ColumnDefinition Width="394*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Label x:Name="LabelText2"
                   Content="Автоматический режим:"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Width="251"
                   Height="35"
                   FontFamily="Courier New"
                   FontSize="17"
                   FontWeight="Bold"
                   Foreground="White"
                   Grid.ColumnSpan="2" />
            <TextBlock x:Name="Text2TextBox"
                       FontFamily="Courier New"
                       FontSize="15"
                       FontWeight="Bold"
                       Foreground="White"
                       Grid.Row="1"
                       TextWrapping="Wrap"
                       Text=""
                       Grid.ColumnSpan="2" />
        </Grid>

        <Grid Grid.Row="3"
              Margin="10,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Label x:Name="LabelText3"
                   Content="Просмотр формальных требований:"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,0"
                   VerticalAlignment="Top"
                   Width="342"
                   Height="35"
                   FontFamily="Courier New"
                   FontSize="17"
                   FontWeight="Bold"
                   Foreground="White"
                   Grid.Row="0" />
            <TextBlock x:Name="Text3TextBox"
                       FontFamily="Courier New"
                       FontSize="15"
                       FontWeight="Bold"
                       Foreground="White"
                       Grid.Row="1"
                       TextWrapping="Wrap"
                       Text="" />
        </Grid>

        <Grid Grid.Row="4"
              Margin="10,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Label x:Name="LabelText4"
                   Content="Важные заметки:"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,0"
                   VerticalAlignment="Top"
                   Width="342"
                   Height="35"
                   FontFamily="Courier New"
                   FontSize="17"
                   FontWeight="Bold"
                   Foreground="White"
                   Grid.Row="0" />
            <TextBlock x:Name="Text4TextBox"
                       FontFamily="Courier New"
                       FontSize="15"
                       FontWeight="Bold"
                       Foreground="White"
                       Grid.Row="1"
                       TextWrapping="Wrap"
                       Text="" />
        </Grid>
        <Grid Grid.Row="5"
              Margin="10,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Label x:Name="LabelText5"
                   Content="Интерпретация результатов:"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,0"
                   VerticalAlignment="Top"
                   Width="342"
                   Height="35"
                   FontFamily="Courier New"
                   FontSize="17"
                   FontWeight="Bold"
                   Foreground="White"
                   Grid.Row="0" />
            <TextBlock x:Name="Text5TextBox"
                       FontFamily="Courier New"
                       FontSize="15"
                       FontWeight="Bold"
                       Foreground="White"
                       Grid.Row="1"
                       TextWrapping="Wrap"
                       Text="" />
        </Grid>
        <Grid Grid.Row="6"
              Width="Auto"
              Margin="0, 10, 0, 10">
            <Button x:Name="CloseButton"
                    Content="Выйти"
                    HorizontalAlignment="Center"
                    Height="31"
                    Margin="0,10,0,10"
                    VerticalAlignment="Center"
                    Width="400"
                    Background="#FF1D2032"
                    BorderBrush="White"
                    Foreground="White"
                    FontFamily="Courier New"
                    FontSize="18"
                    FontWeight="Bold"
                    Click="CloseButton_Click" />
        </Grid>

    </Grid>
</Window>
